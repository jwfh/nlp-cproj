\def\paragraph#1{\medskip\noindent{\scshape #1}}

\long\def\institution#1{%
	\long\def\@institution{{#1}}}
\def\course#1{%
	\def\@course{#1}}

\let\oldmaketitle\maketitle
\def\maketitle{%
%	\onecolumn
	\eject
	\thispagestyle{empty}
	\begin{center}
		\vglue 18pt
		{\large\uppercase\@institution}
		\par\vglue 84pt
		{\LARGE\@title}
		\par\vskip 1pc
		{\Large\@course}
		\par\vfill
		{\Large\begin{tabular}{c}
			\@author
		\end{tabular}}
		\par\vglue 24pt
		{\large\@date}
		\par\vglue 42pt
	\end{center}
	\eject
%	\twocolumn
}

